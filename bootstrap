#!/bin/sh -eux

rm -rf --one-file-system bootstrap.d

cdebootstrap --flavour=minimal --include=whiptail bullseye bootstrap.d http://deb.debian.org/debian | tee bootstrap.log 2>&1
dpkg --root bootstrap.d --purge cdebootstrap-helper-rc.d

# alternative to cdebootstrap if it breaks again: https://bugs.debian.org/cgi-bin/bugreport.cgi?bug=928908
#debootstrap --merged-usr --variant=minbase --include=whiptail bullseye bootstrap.d http://deb.debian.org/debian | tee bootstrap.log 2>&1
