[Unit]
Description=Auto-mount storage device
BindsTo=dev-%i.device

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStartPre=/bin/mkdir -v -p /media/%i
ExecStart=/bin/sh -c "/bin/mount -v -o noatime /dev/%i /media/%i || ( /bin/rmdir -v /media/%i ; exit 1 )"
ExecStop=/bin/umount -v /media/%i
ExecStopPost=/bin/rmdir -v /media/%i
